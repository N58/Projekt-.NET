@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<a class="btn btn-success" role="button" aria-pressed="true" asp-page="/Recipes/Create">Dodaj przepis</a>
<input style="margin-top: 20px; width: 400px; margin-left: auto; margin-right: auto;" class="form-control" placeholder="Szukaj" />

@foreach (var recipe in Model.Recipes)
{
<p>
    <div>@Html.DisplayNameFor(model => model.Recipes.First().Name): @recipe.Name</div>
    <div>@Html.DisplayNameFor(model => model.Recipes.First().Description): @recipe.Description</div>
    <div>@Html.DisplayNameFor(model => model.Recipes.First().DateTime): @recipe.DateTime</div>
</p>
}
