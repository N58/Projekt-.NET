@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<a class="btn btn-success" role="button" aria-pressed="true" asp-page="/Recipes/Create">Dodaj przepis</a>

<div class="text-center">
    <h1 class="display-4">Portal pyszny</h1>
    <br />
    <form method="post">
        <div class="container">
            <label asp-for="Search"></label>
            <input asp-for="Search" class="form-control w-25" style="margin:auto;" />
            <p class="font-weight-bold">
                <span asp-validation-for="Search" class="text-danger" font></span>
            </p>
        </div>
        <button type="submit" class="btn btn-primary">Wyszukaj</button>
    </form>
</div>

<br />
<div class="card-columns">
    @foreach (var recipe in Model.Recipes.Select((value, i) => new { i, value }))
    {
        <div class="col">
            <div class="card border-dark mb-3" style="width: 22rem;">
                <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
                <div class="card-body">
                    <h5 class="card-title">@recipe.value.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Ocena: @recipe.value.Rating</h6>
                    <p class="card-text">@recipe.value.Description</p>
                    <p class="card-text"><small class="text-muted">@recipe.value.DateTime</small></p>
                </div>
            </div>
        </div>
    }
</div>