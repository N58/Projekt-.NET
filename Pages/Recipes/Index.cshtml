@page
@model PortalKulinarny.Pages.Recipes.IndexModel
@using System.Security.Claims;
@{
    ViewData["Title"] = "Index";
}

<h1>Przepisy</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Likes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].ModificationDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Recipe)
        {
        <tr>
            <td>
                @await Model.GetUserName(item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Likes != null) 
                    @Html.DisplayFor(modelItem => item.Likes.Count) 
                else { <span>0</span> }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModificationDateTime)
            </td>
            <td>
                @if (item.UserId != null && item.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier))
                {
                    <a asp-page="./Edit" asp-route-id="@item.RecipeId">Edit</a>
                }
                | <a asp-page="./Details" asp-route-id="@item.RecipeId">Details</a> |
                @if (item.UserId != null && item.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier))
                {
                    <a asp-page="./Delete" asp-route-id="@item.RecipeId">Delete</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
