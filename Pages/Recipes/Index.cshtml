@page
@model PortalKulinarny.Pages.Recipes.IndexModel
@using System.Security.Claims;
@{
    ViewData["Title"] = "Index";
}

<h1>Przepisy</h1>

<p>
    <a class="btn btn-success" asp-page="Create">Dodaj przepis</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].ModificationDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Recipes)
        {
            <tr>
                <td>
                    <a asp-area="Identity" asp-page="/Account/Profile" asp-route-id="@item.UserId">@await Model._utilsService.GetUserName(item.UserId)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModificationDateTime)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.RecipeId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
