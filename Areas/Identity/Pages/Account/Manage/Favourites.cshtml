@page
@model PortalKulinarny.Areas.Identity.Pages.Account.Manage.Favourities
@using System.Security.Claims;


@{
    ViewData["Title"] = "Ulubione";
    ViewData["ActivePage"] = ManageNavPages.Favourities;
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Favourites[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favourites[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favourites[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favourites[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favourites[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Favourites[0].ModificationDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Favourites)
        {
            <tr>
                <td>
                    @await Model.GetUserName(item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModificationDateTime)
                </td>
                <td>
                    @if (item.UserId != null && item.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier))
                    {
                        <a asp-page="../Pages/Recpies/Edit" asp-route-id="@item.RecipeId">Edit</a>
                    }
                    | <a asp-page="../Pages/Recpies/Edit" asp-route-id="@item.RecipeId">Details</a> |
                    @if (item.UserId != null && item.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier))
                    {
                        <a asp-page="../Pages/Recpies/Edit" asp-route-id="@item.RecipeId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}