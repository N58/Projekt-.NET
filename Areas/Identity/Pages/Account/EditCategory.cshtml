
@page
@model PortalKulinarny.Areas.Identity.Pages.Account.EditCategory
@using PortalKulinarny.Models;
@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj kategorie</h1>
<hr />
<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control w-25" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-red" />
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Categories">Wróć</a>
</div>